<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
 <Properties>
    <Property name="logDir">./logs/</Property>
    <Property name="pattern">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
  </Properties>
  <Appenders>
    <File name="Standard" fileName="${logDir}dop.log">
      <PatternLayout pattern="${pattern}"/>
    </File>
    <File name="MaterialImport" fileName="${logDir}materialImport.log">
      <PatternLayout pattern="${pattern}"/>
    </File>
    <File name="Hibernate" fileName="${logDir}hibernate.log">
      <PatternLayout pattern="${pattern}"/>
    </File>
  </Appenders>
  <Loggers>
    <Logger name="ee.hm.dop.oaipmh" level="debug" additivity="false">
      <AppenderRef ref="MaterialImport"/>
    </Logger>
    <Logger name="ee.hm.dop.service.RepositoryService" level="debug" additivity="false">
      <AppenderRef ref="MaterialImport"/>
    </Logger>
    <Logger name="org.hibernate" level="info" additivity="false">
      <AppenderRef ref="Hibernate"/>
    </Logger>
    <Logger name="org.hibernate.SQL" level="debug" additivity="false">
      <AppenderRef ref="Hibernate"/>
    </Logger>
    <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="trace" additivity="false">
      <AppenderRef ref="Hibernate"/>
    </Logger>
    <Root level="INFO">
      <AppenderRef ref="Standard"/>
    </Root>
  </Loggers>
</Configuration>